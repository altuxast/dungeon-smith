{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++.exe build active file",
            "type": "cppbuild",
            "command": "C:\\MinGW\\bin\\g++.exe",  // Your MinGW g++ path
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",  // The currently active file
                "-I${workspaceFolder}/external/SDL3/include/SDL3",  // SDL3 include folder
                "-I${workspaceFolder}/external/raylib/include",  // Raylib include folder
                "-I${workspaceFolder}/external/json/include",  // JSON include folder
                "-L${workspaceFolder}/external/SDL3/lib",  // SDL3 lib folder
                "-L${workspaceFolder}/external/raylib/lib",  // Raylib lib folder
                "-L${workspaceFolder}/external/json/lib",  // JSON lib folder (if applicable)
                "-lSDL3",  // Link SDL3 library
                "-lraylib",  // Link Raylib library
                "-ljson",  // Link JSON library (if applicable)
                "-o",
                "${workspaceFolder}/build/my_program.exe"  // Output the compiled executable to the build folder
            ],
            "options": {
                "cwd": "${fileDirname}"  // Set working directory to the current file's directory
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
